<?xml version="1.0" encoding="utf-8"?>
<tvt>
	<resources>
		<!--
			options:
				playOnLoad (true/false)
						whether this sound starts playing after load
				playlists (string)
						in which playlists this sound fits in

			possible music playlists:
				"default":		in all screens
				"building":		building
				"news":			news agency
				"office":		office
				"movieagency":	movie agency
				"adagency":		ad agency
			- the start menu sound is defined in "startup.xml"
			- "default" is used if no playlist is given
		-->
		<music name="sound_music_main1" url="res/music/60s theme.ogg" playlists="default" />
		<music name="sound_music_main2" url="res/music/Light banjo.ogg" />
		<music name="sound_music_main3" url="res/music/Feelin Good.ogg" />
		<music name="sound_music_main4" url="res/music/Chee Zee Beach.ogg" />
		<music name="sound_music_main5" url="res/music/Fastest Man on Earth.ogg" />
		<music name="sound_music_main6" url="res/music/Funk Game.ogg" />
		<music name="sound_music_main7" url="res/music/Honey Bee.ogg" />
		<music name="sound_music_main8" url="res/music/Peppy Pepe.ogg" />
		<music name="sound_music_main9" url="res/music/Slow Ska Game.ogg" />
		<!--
			options:
				loop (true/false)
						whether this sound is played in a loop
				playlists (string)
						in which playlists this sound fits in

			possible sfx playlists:
				"door_open"				for opening doors
				"door_close"			for closing doors
				"kick_figure"			if figures are kicked out of a room
				"steps"					walking sounds
				"elevator_door_open"	for opening doors of the elevator
				"elevator_door_close"	for closing doors of the elevator
				"elevator_engine"		sound of an elevator
				"gui_close_fade_window" closing a gui window
				"gui_open_window" 		opening a gui window
		-->
		<sfx name="sound_sfx_door_open" url="res/sfx/openDoor.ogg" playlists="door_open" />
		<sfx name="sound_sfx_door_close" url="res/sfx/closeDoor.ogg" playlists="door_close" />
		<sfx name="sound_sfx_steps" url="res/sfx/steps.ogg" playlists="steps" loop="true" />
		<sfx name="sound_sfx_kick_figure" url="res/sfx/kickFromRoom.ogg" playlists="kick_figure" />

		<sfx name="sound_sfx_elevator_engine" url="res/sfx/elevator_engine.ogg" playlists="elevator_engine" loop="true" />
		<sfx name="sound_sfx_elevator_door_open" url="res/sfx/elevator_openDoor.ogg" playlists="elevator_door_open" />
		<sfx name="sound_sfx_elevator_door_close" url="res/sfx/elevator_closeDoor.ogg" playlists="elevator_door_close" />

		<sfx name="sound_sfx_gui_close_fade_window" url="res/sfx/closeFadeWindow.ogg" playlists="gui_close_fade_window" />
		<sfx name="sound_sfx_gui_open_window" url="res/sfx/openWindow.ogg" playlists="gui_open_window" />

		<sfx name="sound_sfx_cashregister" url="res/sfx/cashRegister.ogg" playlists="positiveMoneyChange" />
	</resources>
</tvt>
